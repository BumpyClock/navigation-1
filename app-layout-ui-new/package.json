{
  "name": "app-layout-ui",
  "version": "0.1.0",
  "description": "A production-ready, fully customizable application layout component with sidebar, settings panel, and theming support",
  "author": "Your Name",
  "license": "MIT",
  "keywords": [
    "react",
    "ui",
    "layout",
    "sidebar",
    "dashboard",
    "settings",
    "theme",
    "responsive",
    "typescript",
    "nextjs",
    "tailwindcss"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/app-layout-ui"
  },
  "bugs": {
    "url": "https://github.com/yourusername/app-layout-ui/issues"
  },
  "homepage": "https://github.com/yourusername/app-layout-ui#readme",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "*.css"
  ],
  "style": "dist/styles.css",
  "files": [
    "dist/**",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint \"src/**/*.ts*\"",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run test && npm run lint && npm run typecheck && npm run build",
    "release": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@remixicon/react": "^4.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.479.0",
    "tailwind-merge": "^3.0.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.12",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5"
  },
  "tsup": {
    "entry": ["src/index.tsx", "src/styles.css"],
    "format": ["esm", "cjs"],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "external": ["react", "react-dom"],
    "outDir": "dist",
    "target": "es2019",
    "treeshake": true,
    "minify": true
  }
}